@page
@model SHNGear.Pages.Blog.IndexModel
@{
    ViewData["Title"] = "Blog";
}
<link rel="stylesheet" href="/css/blog-list.css" />

<div class="container py-5">
    <h2 class="mb-4 text-center">BÀI VIẾT BLOG</h2>
    @if (Model.BlogPosts != null && Model.BlogPosts.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var post in Model.BlogPosts)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        @if (post.Images != null && post.Images.Count > 0 && !string.IsNullOrEmpty(post.Images[0]))
                        {
                            var img0 = post.Images[0];
                            var src0 = (img0.StartsWith("http://") || img0.StartsWith("https://")) ? img0 : (img0.StartsWith("/") ? img0 : "/" + img0);
                            <img src="@src0" class="card-img-top" alt="@post.Title" />
                        }
                        @if (post.Images != null && post.Images.Count > 1)
                        {
                            <div class="blog-thumbs">
                                @for (int i = 1; i < post.Images.Count; i++)
                                {
                                    var img = post.Images[i];
                                    if (!string.IsNullOrEmpty(img))
                                    {
                                        var src = (img.StartsWith("http://") || img.StartsWith("https://")) ? img : (img.StartsWith("/") ? img : "/" + img);
                                        <img src="@src" alt="Ảnh phụ @i" title="Ảnh phụ @i" />
                                    }
                                }
                            </div>
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                <a href="/Blog/DetailBlog/@post.Id" class="text-decoration-none text-dark">@post.Title</a>
                            </h5>
                            <div class="mb-2 text-muted" style="font-size:0.95em">
                                <span><i class="bi bi-person"></i> @post.AuthorName</span> &nbsp;|&nbsp;
                                <span><i class="bi bi-calendar"></i> @post.CreatedAt.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div class="card-text mb-3" style="min-height:70px">
                                @Html.Raw(post.Content.Length > 200 ? post.Content.Substring(0, 200) + "..." : post.Content)
                            </div>
                            <div class="mt-auto">
                                <a href="/Blog/DetailBlog/@post.Id" class="btn btn-outline-primary btn-sm">Đọc tiếp</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">Chưa có bài viết nào.</div>
    }
</div>

<div class="container py-5 blog-card">
